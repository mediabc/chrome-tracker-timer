{
  "manifest_version": 3,
  "name": "Yandex Tracker Timer",
  "version": "1.0",
  "description": "Time tracker for Yandex Tracker tasks",
  "permissions": [
    "storage",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": ["*://tracker.yandex.ru/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
} 